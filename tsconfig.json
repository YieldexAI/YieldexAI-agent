{
  "compilerOptions": {
    "target": "ESNext",
    "module": "NodeNext",
    "lib": ["ESNext", "dom"],
    "moduleResolution": "NodeNext",
    "outDir": "./dist",
    "rootDir": ".",
    "strict": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": false,
    "allowImportingTsExtensions": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "resolveJsonModule": true,
    "noImplicitAny": false,
    "allowJs": true,
    "checkJs": false,
    "noEmitOnError": false,
    "moduleDetection": "force",
    "allowArbitraryExtensions": true,
    "paths": {
      "@elizaos/*": ["./node_modules/@elizaos/*"],
      "@elizaos/adapter-supabase": ["./src/database/adapter-supabase/src"],
      "@elizaos/adapter-supabase/*": ["./src/database/adapter-supabase/src/*"]
    }
  },
  "include": [
    "src/**/*",
    "characters/**/*"
  ]
}
